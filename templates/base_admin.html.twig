                <li class="nav-item">
                  <a class="nav-link" href="#">Gérer les recettes</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('list_ingredient') }}">Gérer les ingrédients</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Gérer les niveaux de difficultés</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Gérer les catégories</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Gérer les utilisateurs</a>
                </li>

                {# <li class="nav-item">
                  <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                </li> #}
              </ul>
            </div>
          </div>
        </nav>
      </div>
      <div class="col-8">
        {% block div %}

        {% endblock %}
      </div>
    </div>

  </div>

